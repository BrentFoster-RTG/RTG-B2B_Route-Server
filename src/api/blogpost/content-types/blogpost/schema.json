{
  "kind": "collectionType",
  "collectionName": "blogposts",
  "info": {
    "singularName": "blogpost",
    "pluralName": "blogposts",
    "displayName": "blogpost"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "blogposts"
    },
    "heading": {
      "type": "string"
    },
    "subheading": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "additionalImage": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "shortDescription": {
      "type": "text"
    },
    "longDescription": {
      "type": "text"
    },
    "stats": {
      "type": "component",
      "component": "relation.shared-stat",
      "repeatable": true
    },
    "callToAction": {
      "type": "blocks"
    }
  }
}
